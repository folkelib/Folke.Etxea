{
  "webroot": "wwwroot",
  "version": "1.2.0-*",
  "packOptions": {
    "licenseUrl": "http://opensource.org/licenses/MIT",
    "projectUrl": "https://github.com/folkelib/Folke.Etxea"
  },

  "dependencies": {
    "Microsoft.AspNetCore.Mvc": "1.0.0",
    "Microsoft.AspNetCore.Server.WebListener": "0.1.0",
    "Microsoft.Extensions.Configuration.Json": "1.0.0",
    "Microsoft.Extensions.Configuration.CommandLine": "1.0.0",
    "Microsoft.Extensions.DependencyInjection": "1.0.0",
    "Microsoft.AspNetCore.Server.Kestrel": "1.0.0",
    "Microsoft.AspNetCore.StaticFiles": "1.0.0",
    "Folke.Identity.Elm": "1.2.0-*",
    "Folke.Elm": "1.2.0-*",
    "Folke.Elm.PostgreSql": "1.2.0-*",
    "Folke.CsTsService": "1.2.0-*",
    "Folke.Mvc.Extensions": "1.2.0-*",
    "Folke.Identity.Server": "1.3.0-*",
    "Folke.Forum": "1.2.0-*",
    "Microsoft.AspNetCore.Server.IISIntegration": "1.0.0"
  },
  "tools": {
    "Microsoft.AspNetCore.Server.IISIntegration.Tools": {
      "version": "1.0.0-*",
      "imports": "portable-net45+wp80+win8+wpa81+dnxcore50"
    }
  },
  "scripts": {
    "prepublish": [ "npm install", "bower install", "gulp build" ]
  },
  "frameworks": {
    "netcoreapp1.0": {
      "imports": [ "dnxcore50", "portable-net45+win8", "netstandard1.6" ],
      "dependencies": {
        "Microsoft.NETCore.App": {
          "version": "1.0.0",
          "type": "platform"
        }
      }
    }
  },
  "runtimeOptions": {
    "gcServer": false,
    "gcConcurrent": true
  },
  "commands": {
    "web": "Microsoft.AspNet.Server.Kestrel",
    "csts": "Otsho"
  },
  "buildOptions": {
    "exclude": [
      "wwwroot",
      "node_modules",
      "bower_components"
    ],
    "copyToOutput": {
      "include": [ "res/**/*", "appsettings.*.json", "appsettings.json" ]
    },
    "emitEntryPoint": true,
    "preserveCompilationContext": true
  },
  "publishOptions": {
    "publishExclude": [
      "node_modules",
      "bower_components",
      "**.xproj",
      "**.user",
      "**.vspscc"
    ]
  }
}
